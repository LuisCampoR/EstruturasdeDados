#4
Nomes = ('paulo','luis','ramon','arthur','hansei')

num = int(input("Digite u, número entre 1 a 5: "))
controle = 0
for elemento in Nomes:
  controle += 1
  if num == controle :
    print(elemento)
  elif(num >= 6):
    print("Professor lINDO")

#5
tuplaNota = (10, 6, 8)
soma = 0
for elemento in tuplaNota:
  soma += elemento
  

media = soma/3

print(media)


